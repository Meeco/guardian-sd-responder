{
  // Configurations to allow the "jest" and "jest runner" extensions to work with ESM
  "jest.nodeEnv": {
    "NODE_OPTIONS": "--experimental-vm-modules"
  },
  "jest.jestCommandLine": "NODE_OPTIONS=--experimental-vm-modules npx jest",
  "jestrunner.jestCommand": "node --experimental-vm-modules --no-warnings node_modules/jest/bin/jest.js --config jest.config.js",
  "jestrunner.debugOptions": {
    "env": {
      "NODE_OPTIONS": "--experimental-vm-modules"
    }
  }
}
