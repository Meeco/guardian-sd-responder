{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "sourceRoot": "src",
    "types": ["./src/modules.d.ts", "node"],
    "outDir": "dist"
  },
  "include": ["src/**/*.ts", "test/**/*.ts"]
}
